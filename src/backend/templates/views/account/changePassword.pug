extends ../../layouts/default
include ../../mixins/flash-messages
include ../../mixins/form/account
block bannerMixin
block content
    .containerCenter
        .row
            .col-md-12
                h2.account-title Change Password
                h4.account-subtitle.text-center Enter your username AND current password to set a new password.
                br
        .row
            .col-md-offset-3.col-md-6
                +flash-messages(flash)

        .row
            .col-md-offset-3.col-md-6
                form(
                    method='post',
                    action='/account/changePassword',
                    data-toggle='validator'
                )
                    +oldPassword('Old')
                    +confirm-password('','New')
                    .form-actions
                        button.btn.btn-default.btn-lg.btn-outro.btn-danger(
                            type='submit'
                        ) Change

