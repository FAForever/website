extends ../../layouts/default
include ../../mixins/flash-messages
include ../../mixins/form/account
block bannerMixin
block content
    .containerCenter
        .row
            .col-md-12
                h2.account-title Change Email
                h4.account-subtitle.text-center Enter your new email into the form below.
                br
        .row
            .col-md-offset-3.col-md-6
                +flash-messages(flash)

        .row
            .col-md-offset-3.col-md-6
                form(
                    method='post',
                    action='/account/changeEmail',
                    data-toggle='validator'
                )
                    +email
                    +currentPassword
                    .form-actions
                        button.btn.btn-default.btn-lg.btn-outro.btn-danger(
                            type='submit'
                        ) Change Email
