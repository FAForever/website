extends ../layouts/default

block content
	.container.text-center
		.col-md-12
			h1 Forged Alliance Forever Calendar
			h4 The Forged Alliance Forever calendar includes upcoming Tournaments and Developer Events
			hr
		.col-md-12
			.col-md-6
				h2.developerCalendar Maintenance &amp; Updates Calendar
				strong faforever.com_cpellm2p2sdfr8dfmnmgs1davk@group.calendar.google.com
				br
				br
				i.fa.fa-calendar(aria-hidden="true") &nbsp;
				a(href="https://calendar.google.com/calendar/ical/faforever.com_cpellm2p2sdfr8dfmnmgs1davk%40group.calendar.google.com/public/basic.ics") ICAL Link
				br
				br
				input.toggleSwitch.toggleDeveloper(type='checkbox', checked)
			.col-md-6
				h2.tournamentCalendar Tournament Calendar
				input.toggleSwitch.toggleTournament(type='checkbox', checked)
			hr
	div.calendar

block js
	script(type='text/javascript').
		var calendar_key =!{JSON.stringify(calendar)};
		var tournamentEvents =!{JSON.stringify(tournaments)};
		var locale =!{JSON.stringify(locale)};
	script(src='/js/calendar.min.js')
