extends ../../layouts/default
include ../../mixins/flash-messages
include ../../mixins/form/account

block css
    link(href="/styles/css/account.min.css", rel="stylesheet")

block content
    .container.text-center
        .row
            .col-md-12
                h1.account-title Change Username
                h4.account-subtitle.text-center Change your username by using the form below. Once it is changed, you can log in to your account with the new username.
                hr
        .row
            .col-md-offset-3.col-md-6
                +flash-messages(flash)

        .row
            .col-md-offset-3.col-md-6
                form(method='post',action="/account/username/change",data-toggle="validator")
                    +username
                    .form-actions
                        button(type='submit').btn.btn-default.btn-lg.btn-outro.btn-danger Change
block js
    script(src='/js/account.min.js')