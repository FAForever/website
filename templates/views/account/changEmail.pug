extends ../../layouts/default
include ../../mixins/flash-messages
include ../../mixins/form/account

block content
    .container.text-center
        .row
            .col-md-12
                h1.account-title Change Email
                h4.account-subtitle.text-center Enter your new email into the form below.
                hr
        .row
            .col-md-offset-3.col-md-6
                +flash-messages(flash)

        .row
            .col-md-offset-3.col-md-6
                form(method='post',action="/account/email/change",data-toggle="validator")
                    +email
                    .form-actions
                        button(type='submit').btn.btn-default.btn-lg.btn-outro.btn-danger Change Email

block js
    script(src='/js/account.min.js')
