extends ../../layouts/default
include ../../mixins/flash-messages
include ../../mixins/form/account

block content
  .container.text-center
    .row
      .col-md-12
        h1.account-title Complete registration on FAForever
        h4.account-subtitle.text-center Hello #{username}, please define your password in order to create your account.

    .row
      .col-md-offset-3.col-md-6
        +flash-messages(flash)
    .row
      .col-md-offset-3.col-md-6
        form(method='post',action="/account/activate?username="+username+"&token="+token,data-toggle="validator")
          +confirm-password
          .form-actions
            button(type='submit').btn.btn-default.btn-lg.btn-outro.btn-danger Register

block js
  script(src='/js/account.min.js')
